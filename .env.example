# IIPImage核心配置
VERBOSITY=1
JPEG_QUALITY=85
MAX_IMAGE_CACHE_SIZE=256
MAX_CVT=5000
INTERPOLATION=1
ALLOW_UPSCALING=0

# 路径配置
IMAGES_PATH=./images
LOGS_PATH=./logs
CONFIG_PATH=./config

# 缓存配置
MEMCACHED_SERVERS=memcached:11211
HTTP_CACHE_CONTROL=max-age=86400

# 网络配置
HTTP_PORT=80
HTTPS_PORT=443

# 安全配置
FILESYSTEM_PREFIX=/var/www/localhost/images/
WATERMARK_OPACITY=0.5